= form_with(model: task, local: true, html: { class: 'form' }) do |form|
  - if task.errors.any?
    h2
      = pluralize(task.errors.count, "error")
    ul
      - task.errors.full_messages.each do |message|
        li
          = message
  .field
    = form.label :title
    = form.text_field :title
  
  .actions
    = form.submit "Create", class: 'button'
